<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Jason_Chapman_MobileDev_C971.Term1Page"
             Title="Term 1" >

    <ContentPage.Content>
        <ScrollView>
            <!--<StackLayout Margin="30">-->
            <Grid>
                <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="25" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                
                <!--Row 1/2-->
            <!--Title-->
            <Label Text="Term 1"
                   TextColor="Black"
                   Margin="20,15,0,0"
                   FontSize="30"
                   FontAttributes="Bold"/>
                <!--Start-->
                <Label Grid.Column="1"
                   Text="Start Date"
                   TextColor="Black"
                   FontAttributes="Bold"
                   FontSize="20"
                   HorizontalTextAlignment="End"
                   Margin="10"/>
                <DatePicker Grid.Column="1"
                            Grid.Row="0"
                            x:Name="Term1DatePickerStart"
                            MinimumDate="01/01/2018"
                            MaximumDate="12/31/2018"
                            Date="06/21/2018"
                            HorizontalOptions="End"
                            Margin="10"/>
                <!--End-->
                <Label Grid.Column="1"
                       Grid.Row="1"
                       Text="End Date"
                       TextColor="Black"
                       FontAttributes="Bold"
                       FontSize="20"
                       HorizontalTextAlignment="End"
                       Margin="10"/>
                <DatePicker Grid.Column="1"
                            Grid.Row="1"
                            x:Name="Term2DatePickerEnd"
                            MinimumDate="01/01/2018"
                            MaximumDate="12/31/2030"
                            Date="02/9/2022"
                            HorizontalOptions="End"
                            Margin="10"/>

                
                <!--Row 3+-->
                <Button Grid.Row="3"
                    Text="Course 1"
                        x:Name="Course1Button"
                    Clicked="Course1Btn_Clicked"
                    Margin="10"/>
                <Button Grid.Row="4" 
                    Text="Course 2" 
                    Clicked="Course2Btn_Clicked"
                    Margin="10"/>
                <Button Grid.Row="5"
                    Text="Course 3" 
                    Clicked="Course3Btn_Clicked"
                    Margin="10"/>
                <Button Grid.Row="3"
                        Grid.Column="1"
                    Text="Course 4" 
                    Clicked="Course4Btn_Clicked"
                    Margin="10"/>
                <Button Grid.Row="4"
                        Grid.Column="1"
                    Text="Course 5" 
                    Clicked="Course5Btn_Clicked"
                    Margin="10"/>
                <Button Grid.Row="5" 
                        Grid.Column="1"
                    Text="Course 6" 
                    Clicked="Course6Btn_Clicked"
                    Margin="10"/>
            </Grid>
            <!--</StackLayout>-->
        </ScrollView>
    </ContentPage.Content>
</ContentPage>